---
import Layout from "../layouts/Layout.astro";
import ReflectionText from "../components/ReflectionText";
import GithubRepos from "../components/GithubRepos";
import SectionHeading from "../components/SectionHeading";
import TextGlow from "../components/TextGlow";
---

<Layout title="Projects - Nick Russo">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <h1 class="text-4xl font-bold mb-8 text-center">
            <span class="text-accent-purple">
                <ReflectionText client:visible>My</ReflectionText>
            </span>
            <span class="text-white">
                <ReflectionText client:visible>Projects</ReflectionText>
            </span>
        </h1>

        <!-- Current Projects Section -->
        <section class="mb-12">
            <SectionHeading client:visible>Current Projects</SectionHeading>

            <div class="grid gap-4 md:grid-cols-2">
                <div class="card-container hover:border-lime-500 group relative">
                    <h3
                        class="text-xl font-semibold text-lime-400 mb-2 group-hover:text-lime-300"
                    >
                        Backend-as-a-Service Platform
                    </h3>
                    <p class="text-gray-300 mb-4">
                        Building a database platform to simplify backend development by
                        handling auth, APIs, databases, and compute functions.
                    </p>
                    <div class="flex space-x-3 text-sm mb-2">
                        <span class="px-2 py-1 bg-space-500 rounded text-accent-blue"
                            >Go</span
                        >
                        <span class="px-2 py-1 bg-space-500 rounded text-blue-400"
                            >Cloud</span
                        >
                        <span class="px-2 py-1 bg-space-500 rounded text-purple-400"
                            >PostgreSQL</span
                        >
                    </div>
                    <p class="text-gray-400 italic">In development</p>
                </div>

                <div class="card-container hover:border-lime-500 group relative">
                    <h3
                        class="text-xl font-semibold text-lime-400 mb-2 group-hover:text-lime-300"
                    >
                        Vector Database from Scratch
                    </h3>
                    <p class="text-gray-300 mb-4">
                        Researching database systems and building a proof-of-concept
                        vector database from scratch in Mojo, exploring efficient
                        indexing and querying of high-dimensional embeddings.
                    </p>
                    <div class="flex space-x-3 text-sm mb-2">
                        <span class="px-2 py-1 bg-space-500 rounded text-orange-400"
                            >Mojo</span
                        >
                        <span class="px-2 py-1 bg-space-500 rounded text-blue-400"
                            >Databases</span
                        >
                        <span class="px-2 py-1 bg-space-500 rounded text-purple-400"
                            >Vector Search</span
                        >
                    </div>
                    <p class="text-gray-400 italic">In progress</p>
                </div>
            </div>
        </section>

        <!-- Pinned Repositories Section -->
        <section class="mb-12">
            <SectionHeading client:visible>Pinned Repositories</SectionHeading>
            <GithubRepos client:visible username="nijaru" limit={6} />
        </section>

        <div class="text-center">
            <a
                href="https://github.com/nijaru"
                target="_blank"
                rel="noopener noreferrer"
                class="px-6 py-3 bg-space-700 hover:bg-space-600 text-white font-bold rounded-full transition-all duration-300 inline-flex items-center"
            >
                <svg
                    class="w-5 h-5 mr-2"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                >
                    <path
                        fill-rule="evenodd"
                        d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                        clip-rule="evenodd"></path>
                </svg>
                View All Projects on GitHub
            </a>
        </div>

        <div class="text-center mt-8">
            <a
                href="/"
                class="inline-flex items-center text-accent-blue hover:text-accent-purple"
            >
                Back to Home
                <svg
                    class="w-4 h-4 ml-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                    aria-hidden="true"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
            </a>
        </div>
    </div>
</Layout>
