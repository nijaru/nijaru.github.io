---
import Layout from "../layouts/Layout.astro";
import GithubRepos from "../components/GithubRepos.tsx";
import ErrorBoundary from "../components/ErrorBoundary.tsx";
---

<Layout title="Projects - Nick Russo">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <header class="py-16">
            <h1 class="text-3xl md:text-4xl font-bold mb-4">
                <span class="text-accent-blue">Projects</span>
            </h1>
        </header>

        <!-- Current Projects -->
        <section class="pb-12">
            <div class="content-backdrop">
                <h2 class="text-lg font-semibold text-white mb-8">Current projects</h2>
                <div class="space-y-8">
                <div class="group">
                    <a
                        href="https://github.com/omendb/omendb"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="block"
                    >
                        <h3 class="text-xl font-medium text-white group-hover:text-accent-blue transition-colors mb-2">
                            Vector database in Mojo
                        </h3>
                        <p class="text-gray-300 mb-3">
                            Building a high-performance vector database from scratch in Mojo for 
                            similarity search and embedding operations. Focused on efficient 
                            indexing algorithms and memory management.
                        </p>
                        <div class="flex items-center space-x-4 text-sm text-gray-400">
                            <span>Mojo</span>
                            <span>Vector Search</span>
                            <span>SIMD</span>
                        </div>
                    </a>
                </div>

                <div class="group">
                    <a
                        href="https://github.com/nijaru/aircher"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="block"
                    >
                        <h3 class="text-xl font-medium text-white group-hover:text-accent-blue transition-colors mb-2">
                            TUI coding agent in Rust
                        </h3>
                        <p class="text-gray-300 mb-3">
                            Yet another terminal-based coding assistant with improved workflow 
                            automation, better context management, and seamless editor integration.
                        </p>
                        <div class="flex items-center space-x-4 text-sm text-gray-400">
                            <span>Rust</span>
                            <span>TUI</span>
                            <span>AI/LLM</span>
                        </div>
                    </a>
                </div>

                <div>
                    <h3 class="text-xl font-medium text-white mb-2">
                        Local LLM infrastructure
                    </h3>
                    <p class="text-gray-300 mb-3">
                        Running local language models with Ollama and Open WebUI, accessible 
                        remotely via Tailscale for secure, self-hosted AI services.
                    </p>
                    <div class="flex items-center space-x-4 text-sm text-gray-400">
                        <span>Ollama</span>
                        <span>Tailscale</span>
                        <span>Self-hosted</span>
                    </div>
                </div>

                <div class="group">
                    <a
                        href="https://github.com/nijaru/max-whisper"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="block"
                    >
                        <h3 class="text-xl font-medium text-white group-hover:text-accent-blue transition-colors mb-2">
                            Whisper on MAX Graph
                        </h3>
                        <p class="text-gray-300 mb-3">
                            Experimenting with OpenAI Whisper implementation using Modular's 
                            MAX Graph during their hack weekend. Exploring performance 
                            optimizations for audio processing.
                        </p>
                        <div class="flex items-center space-x-4 text-sm text-gray-400">
                            <span>MAX Graph</span>
                            <span>Audio ML</span>
                            <span>Whisper</span>
                        </div>
                    </a>
                </div>
                </div>
            </div>
        </section>

        <!-- Pinned Repositories Section -->
        <section class="pb-12 border-t border-white/10 pt-12">
            <h2 class="text-lg font-semibold text-white mb-8">Featured Repositories</h2>
            <ErrorBoundary client:idle>
                <GithubRepos client:idle username="nijaru" limit={6} />
            </ErrorBoundary>
        </section>

        <div class="text-center">
            <a
                href="https://github.com/nijaru"
                target="_blank"
                rel="noopener noreferrer"
                class="px-6 py-3 bg-dark-700 hover:bg-dark-600 text-white font-bold rounded-full transition-all duration-300 inline-flex items-center"
            >
                <svg
                    class="w-5 h-5 mr-2"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                >
                    <path
                        fill-rule="evenodd"
                        d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                        clip-rule="evenodd"></path>
                </svg>
                View All Projects on GitHub
            </a>
        </div>

        <div class="text-center mt-8">
            <a
                href="/"
                class="inline-flex items-center text-accent-blue hover:text-accent-blue"
            >
                Back to Home
                <svg
                    class="w-4 h-4 ml-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                    aria-hidden="true"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
            </a>
        </div>
    </div>
</Layout>
