---
import Layout from "../layouts/Layout.astro";
import ReflectionText from "../components/ReflectionText";
import GithubRepos from "../components/GithubRepos.tsx";
import ErrorBoundary from "../components/ErrorBoundary.tsx";
import SectionHeading from "../components/SectionHeading";
import TextGlow from "../components/TextGlow";
---

<Layout title="Projects - Nick Russo">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <h1 class="text-4xl font-bold mb-8 text-center">
            <span class="text-accent-purple">
                <ReflectionText client:visible>My</ReflectionText>
            </span>
            <span class="text-white">
                <ReflectionText client:visible>Projects</ReflectionText>
            </span>
        </h1>

        <!-- Current Projects Section -->
        <section class="mb-12">
            <SectionHeading client:visible>Current Projects</SectionHeading>

            <div class="grid gap-4 md:grid-cols-2">
                <div class="card-container hover:border-lime-500 group relative">
                    <a
                        href="https://github.com/omendb/omendb"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="absolute inset-0 z-10"
                        aria-label="View OmenDB repository on GitHub"
                    >
                        <span class="sr-only">View OmenDB on GitHub</span>
                    </a>
                    <h3
                        class="text-xl font-semibold text-lime-400 mb-2 group-hover:text-lime-300"
                    >
                        Vector Database in <TextGlow client:visible>Mojo</TextGlow>
                    </h3>
                    <p class="text-gray-300 text-lg mb-4">
                        Building a high-performance vector database from scratch in Mojo for 
                        similarity search and embedding operations. Focused on efficient 
                        indexing algorithms and memory management.
                    </p>
                    <div class="flex space-x-3 text-sm mb-2">
                        <span class="px-2 py-1 bg-space-500 rounded text-orange-400"
                            >Mojo</span
                        >
                        <span class="px-2 py-1 bg-space-500 rounded text-blue-400"
                            >Vector Search</span
                        >
                        <span class="px-2 py-1 bg-space-500 rounded text-purple-400"
                            >SIMD</span
                        >
                    </div>
                    <div class="relative z-20 pointer-events-none mt-auto">
                        <span class="inline-flex items-center text-accent-blue group-hover:text-accent-purple">
                            View on GitHub
                            <svg
                                class="w-4 h-4 ml-1"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                aria-hidden="true"
                            >
                                <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z" />
                            </svg>
                        </span>
                    </div>
                </div>

                <div class="card-container hover:border-lime-500 group relative">
                    <a
                        href="https://github.com/nijaru/aircher"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="absolute inset-0 z-10"
                        aria-label="View Aircher repository on GitHub"
                    >
                        <span class="sr-only">View Aircher on GitHub</span>
                    </a>
                    <h3
                        class="text-xl font-semibold text-lime-400 mb-2 group-hover:text-lime-300"
                    >
                        TUI Coding Agent in <TextGlow client:visible>Rust</TextGlow>
                    </h3>
                    <p class="text-gray-300 text-lg mb-4">
                        Yet another terminal-based coding assistant with improved workflow 
                        automation, better context management, and seamless editor integration.
                    </p>
                    <div class="flex space-x-3 text-sm mb-2">
                        <span class="px-2 py-1 bg-space-500 rounded text-orange-400"
                            >Rust</span
                        >
                        <span class="px-2 py-1 bg-space-500 rounded text-blue-400"
                            >TUI</span
                        >
                        <span class="px-2 py-1 bg-space-500 rounded text-purple-400"
                            >AI/LLM</span
                        >
                    </div>
                    <div class="relative z-20 pointer-events-none mt-auto">
                        <span class="inline-flex items-center text-accent-blue group-hover:text-accent-purple">
                            View on GitHub
                            <svg
                                class="w-4 h-4 ml-1"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                aria-hidden="true"
                            >
                                <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z" />
                            </svg>
                        </span>
                    </div>
                </div>

                <div class="card-container hover:border-lime-500 group relative">
                    <h3
                        class="text-xl font-semibold text-lime-400 mb-2 group-hover:text-lime-300"
                    >
                        Local LLM Infrastructure
                    </h3>
                    <p class="text-gray-300 text-lg mb-4">
                        Running local language models with <TextGlow client:visible>Ollama</TextGlow> 
                        and Open WebUI, accessible remotely via Tailscale for secure, 
                        self-hosted AI services.
                    </p>
                    <div class="flex space-x-3 text-sm mb-2">
                        <span class="px-2 py-1 bg-space-500 rounded text-green-400"
                            >Ollama</span
                        >
                        <span class="px-2 py-1 bg-space-500 rounded text-blue-400"
                            >Tailscale</span
                        >
                        <span class="px-2 py-1 bg-space-500 rounded text-purple-400"
                            >Self-hosted</span
                        >
                    </div>
                    <p class="text-gray-400 italic">Active deployment</p>
                </div>

                <div class="card-container hover:border-lime-500 group relative">
                    <a
                        href="https://github.com/nijaru/max-whisper"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="absolute inset-0 z-10"
                        aria-label="View max-whisper repository on GitHub"
                    >
                        <span class="sr-only">View max-whisper on GitHub</span>
                    </a>
                    <h3
                        class="text-xl font-semibold text-lime-400 mb-2 group-hover:text-lime-300"
                    >
                        <TextGlow client:visible>Whisper</TextGlow> on MAX Graph
                    </h3>
                    <p class="text-gray-300 text-lg mb-4">
                        Experimenting with OpenAI Whisper implementation using Modular's 
                        MAX Graph during their hack weekend. Exploring performance 
                        optimizations for audio processing.
                    </p>
                    <div class="flex space-x-3 text-sm mb-2">
                        <span class="px-2 py-1 bg-space-500 rounded text-red-400"
                            >MAX Graph</span
                        >
                        <span class="px-2 py-1 bg-space-500 rounded text-blue-400"
                            >Audio ML</span
                        >
                        <span class="px-2 py-1 bg-space-500 rounded text-purple-400"
                            >Whisper</span
                        >
                    </div>
                    <div class="relative z-20 pointer-events-none mt-auto">
                        <span class="inline-flex items-center text-accent-blue group-hover:text-accent-purple">
                            View on GitHub
                            <svg
                                class="w-4 h-4 ml-1"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                aria-hidden="true"
                            >
                                <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z" />
                            </svg>
                        </span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Pinned Repositories Section -->
        <section class="mb-12">
            <SectionHeading client:visible>Pinned Repositories</SectionHeading>
            <ErrorBoundary client:idle>
                <GithubRepos client:idle username="nijaru" limit={6} />
            </ErrorBoundary>
        </section>

        <div class="text-center">
            <a
                href="https://github.com/nijaru"
                target="_blank"
                rel="noopener noreferrer"
                class="px-6 py-3 bg-space-700 hover:bg-space-600 text-white font-bold rounded-full transition-all duration-300 inline-flex items-center"
            >
                <svg
                    class="w-5 h-5 mr-2"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                >
                    <path
                        fill-rule="evenodd"
                        d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                        clip-rule="evenodd"></path>
                </svg>
                View All Projects on GitHub
            </a>
        </div>

        <div class="text-center mt-8">
            <a
                href="/"
                class="inline-flex items-center text-accent-blue hover:text-accent-purple"
            >
                Back to Home
                <svg
                    class="w-4 h-4 ml-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                    aria-hidden="true"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
            </a>
        </div>
    </div>
</Layout>
