---
import Layout from "../layouts/Layout.astro";
import SocialLinks from "../components/SocialLinks.astro";

const currentYear = new Date().getFullYear();

const keyProjects = [
    {
        name: "OmenDB",
        url: "https://github.com/omendb",
        description: "PostgreSQL-compatible vector database with HNSW + Binary Quantization targeting 10x faster queries and 24x better memory efficiency than pgvector",
        tech: ["Rust", "Vector Search", "Database Systems"],
        metrics: "10x faster, 24x memory efficiency"
    },
    {
        name: "Pacabot",
        description: "AI-powered trading bot with advanced market analysis and automated strategy execution",
        tech: ["Python", "AI/ML", "Finance"],
        metrics: "Real-time analysis"
    },
    {
        name: "Zenith",
        url: "https://github.com/nijaru/zenith",
        description: "Modern Python web framework with exceptional performance and intuitive developer experience",
        tech: ["Python", "Web Framework", "API Design"],
        metrics: "9,600+ req/s"
    },
    {
        name: "sy",
        url: "https://github.com/nijaru/sy",
        description: "Modern file synchronization tool - rsync reimagined with delta sync and parallel transfers",
        tech: ["Rust", "CLI Tools", "Systems Programming"],
        metrics: "40-79% faster than rsync"
    },
    {
        name: "Kombrucha",
        url: "https://github.com/nijaru/kombrucha",
        description: "Modern package manager reimagining Homebrew with fast dependency resolution",
        tech: ["Rust", "Package Management"],
        metrics: "Fast dependency resolution"
    }
];

const experience = [
    {
        company: "OmniTier Inc.",
        title: "Software Developer",
        period: "Current",
        description: "Backend development and distributed systems"
    }
];

const education = [
    {
        school: "42 Silicon Valley",
        degree: "Computer Science",
        period: "2018-2020",
        description: "Intensive software engineering program"
    }
];

const skills = {
    primary: ["Python", "Rust", "Go", "TypeScript"],
    areas: [
        "AI/ML Systems",
        "Database Internals",
        "API Design",
        "Backend Architecture",
        "Vector Search",
        "Distributed Systems"
    ],
    tools: [
        "PostgreSQL",
        "Redis",
        "Docker",
        "Git",
        "Linux",
        "AWS",
        "Cloudflare"
    ]
};
---

<Layout
    title="Nick Russo - Professional Profile"
    description="Software developer specializing in backend development, distributed systems, AI infrastructure, and high-performance databases."
    ogType="profile"
>
    <!-- Professional Profile Container -->
    <div class="py-8 print:py-4">
        <div class="container mx-auto max-w-4xl px-6">

            <!-- Header/Hero Section -->
            <section class="mb-8 print:mb-4">
                <div class="bg-white/[0.02] backdrop-blur-sm border border-white/5 rounded-lg p-6 print:border-0 print:p-0">
                    <div class="flex items-start justify-between gap-6">
                        <div class="flex-1">
                            <h1 class="text-4xl font-bold text-text-primary mb-2 print:text-3xl">
                                Nick Russo
                            </h1>
                            <p class="text-xl text-accent-blue mb-2 print:text-lg print:text-text-primary">
                                Software Developer | Backend & Distributed Systems
                            </p>
                            <p class="body-normal text-text-tertiary mb-3 print:text-sm">
                                San Francisco Bay Area
                            </p>
                            <div class="flex flex-wrap gap-3 text-sm print:text-xs">
                                <a href="mailto:nijaru7@gmail.com" class="text-text-secondary hover:text-accent-blue transition-colors print:text-text-primary">
                                    nijaru7@gmail.com
                                </a>
                                <span class="text-text-tertiary">•</span>
                                <a href="https://nijaru.com" class="text-text-secondary hover:text-accent-blue transition-colors print:text-text-primary">
                                    nijaru.com
                                </a>
                                <span class="text-text-tertiary">•</span>
                                <a href="https://github.com/nijaru" class="text-text-secondary hover:text-accent-blue transition-colors print:text-text-primary">
                                    github.com/nijaru
                                </a>
                            </div>
                        </div>
                        <button onclick="window.print()" class="btn btn-primary print:hidden whitespace-nowrap">
                            Download Resume
                        </button>
                    </div>
                </div>
            </section>

            <!-- About -->
            <section class="mb-8 print:mb-4">
                <div class="bg-white/[0.02] backdrop-blur-sm border border-white/5 rounded-lg p-6 print:border-0 print:p-0">
                    <h2 class="text-2xl font-bold text-text-primary mb-4 print:text-xl">About</h2>
                    <p class="body-normal text-text-secondary leading-relaxed print:text-sm">
                        Software developer specializing in backend development and distributed systems.
                        I build AI infrastructure, high-performance databases, and developer tools from
                        low-level internals to full-stack applications. Experience with production APIs,
                        vector search systems, and machine learning infrastructure at scale.
                    </p>
                </div>
            </section>

            <!-- Experience -->
            <section class="mb-8 print:mb-4">
                <div class="bg-white/[0.02] backdrop-blur-sm border border-white/5 rounded-lg p-6 print:border-0 print:p-0">
                    <h2 class="text-2xl font-bold text-text-primary mb-4 print:text-xl">Experience</h2>
                    <div class="space-y-4">
                        {experience.map((job) => (
                            <div class="border-b border-white/5 pb-4 last:border-0 last:pb-0 print:border-0">
                                <div class="flex justify-between items-start mb-2">
                                    <div>
                                        <h3 class="text-lg font-semibold text-text-primary print:text-base">{job.title}</h3>
                                        <p class="text-accent-blue print:text-text-primary">{job.company}</p>
                                    </div>
                                    <span class="text-sm text-text-tertiary whitespace-nowrap print:text-xs">{job.period}</span>
                                </div>
                                <p class="body-normal text-text-secondary print:text-sm">{job.description}</p>
                            </div>
                        ))}
                    </div>
                </div>
            </section>

            <!-- Key Projects -->
            <section class="mb-8 print:mb-4">
                <div class="bg-white/[0.02] backdrop-blur-sm border border-white/5 rounded-lg p-6 print:border-0 print:p-0">
                    <h2 class="text-2xl font-bold text-text-primary mb-4 print:text-xl">Key Projects</h2>
                    <div class="space-y-4 print:space-y-2">
                        {keyProjects.map((project) => (
                            <div class="border-b border-white/5 pb-4 last:border-0 last:pb-0 print:border-0 print:pb-2">
                                <div class="flex items-start justify-between mb-2">
                                    <h3 class="text-lg font-semibold text-text-primary print:text-base">
                                        {project.url ? (
                                            <a
                                                href={project.url}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                                class="hover:text-accent-blue transition-colors"
                                            >
                                                {project.name}
                                            </a>
                                        ) : (
                                            project.name
                                        )}
                                    </h3>
                                    <span class="text-sm text-accent-blue font-medium whitespace-nowrap ml-4 print:text-xs print:text-text-tertiary">
                                        {project.metrics}
                                    </span>
                                </div>
                                <p class="body-normal text-text-secondary mb-2 leading-relaxed print:text-sm print:mb-1">
                                    {project.description}
                                </p>
                                <div class="flex flex-wrap gap-2 print:gap-1">
                                    {project.tech.map((tech) => (
                                        <span class="px-2 py-1 bg-white/5 border border-white/10 rounded text-xs text-text-tertiary print:border-0 print:bg-transparent print:px-0">
                                            {tech}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            </section>

            <!-- Technical Skills -->
            <section class="mb-8 print:mb-4">
                <div class="bg-white/[0.02] backdrop-blur-sm border border-white/5 rounded-lg p-6 print:border-0 print:p-0">
                    <h2 class="text-2xl font-bold text-text-primary mb-4 print:text-xl">Technical Skills</h2>

                    <div class="grid md:grid-cols-3 gap-4 print:gap-2">
                        <div>
                            <h3 class="text-sm font-semibold text-text-primary mb-2 print:text-xs">Languages</h3>
                            <div class="flex flex-wrap gap-2 print:gap-1">
                                {skills.primary.map((skill) => (
                                    <span class="px-3 py-1 bg-accent-blue/10 border border-accent-blue/30 rounded text-sm text-accent-blue print:text-xs print:border-0 print:bg-transparent print:px-0 print:text-text-primary">
                                        {skill}
                                    </span>
                                ))}
                            </div>
                        </div>

                        <div>
                            <h3 class="text-sm font-semibold text-text-primary mb-2 print:text-xs">Expertise</h3>
                            <div class="flex flex-wrap gap-2 print:gap-1">
                                {skills.areas.map((skill) => (
                                    <span class="px-2 py-1 bg-white/5 border border-white/10 rounded text-xs text-text-secondary print:border-0 print:bg-transparent print:px-0">
                                        {skill}
                                    </span>
                                ))}
                            </div>
                        </div>

                        <div>
                            <h3 class="text-sm font-semibold text-text-primary mb-2 print:text-xs">Tools</h3>
                            <div class="flex flex-wrap gap-2 print:gap-1">
                                {skills.tools.map((skill) => (
                                    <span class="px-2 py-1 bg-white/5 border border-white/10 rounded text-xs text-text-secondary print:border-0 print:bg-transparent print:px-0">
                                        {skill}
                                    </span>
                                ))}
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Education -->
            <section class="mb-8 print:mb-4">
                <div class="bg-white/[0.02] backdrop-blur-sm border border-white/5 rounded-lg p-6 print:border-0 print:p-0">
                    <h2 class="text-2xl font-bold text-text-primary mb-4 print:text-xl">Education</h2>
                    <div class="space-y-4">
                        {education.map((edu) => (
                            <div class="border-b border-white/5 pb-4 last:border-0 last:pb-0 print:border-0">
                                <div class="flex justify-between items-start mb-2">
                                    <div>
                                        <h3 class="text-lg font-semibold text-text-primary print:text-base">{edu.school}</h3>
                                        <p class="text-accent-blue print:text-text-primary">{edu.degree}</p>
                                    </div>
                                    <span class="text-sm text-text-tertiary whitespace-nowrap print:text-xs">{edu.period}</span>
                                </div>
                                <p class="body-normal text-text-secondary print:text-sm">{edu.description}</p>
                            </div>
                        ))}
                    </div>
                </div>
            </section>

            <!-- Footer Note -->
            <div class="text-center text-text-tertiary text-sm print:hidden mt-12">
                <p class="mb-2">
                    <a href="/" class="text-accent-blue hover:underline">← Back to main site</a>
                </p>
                <p>Last updated: {new Date().toLocaleDateString('en-US', { month: 'long', year: 'numeric' })}</p>
            </div>

        </div>
    </div>
</Layout>

<style>
    @media print {
        @page {
            size: letter;
            margin: 0.5in;
        }

        body {
            background: white !important;
            color: black !important;
        }

        /* Hide all buttons and interactive elements */
        button, .btn {
            display: none !important;
        }

        /* Remove backgrounds and borders */
        .bg-white\/\[0\.02\],
        .backdrop-blur-sm,
        .border {
            background: transparent !important;
            border: none !important;
            backdrop-filter: none !important;
        }

        /* Compress spacing */
        section {
            page-break-inside: avoid;
            margin-bottom: 1rem !important;
        }

        h2 {
            page-break-after: avoid;
            margin-bottom: 0.5rem !important;
        }

        /* Optimize colors for print */
        .text-accent-blue,
        .text-text-primary,
        .text-text-secondary,
        .text-text-tertiary {
            color: black !important;
        }

        /* Remove tech skill pills background */
        span[class*="px-"] {
            padding: 0 !important;
            background: transparent !important;
            border: none !important;
        }

        /* Ensure single page */
        .container {
            max-width: 100% !important;
        }
    }
</style>
