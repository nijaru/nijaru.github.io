---
import Layout from "../layouts/Layout.astro";
import SocialLinks from "../components/SocialLinks.astro";
---

<Layout
    title="Nick Russo - Software Developer"
    description="Software developer building backend systems, distributed applications, and AI-powered tools."
    showFooter={false}
>
    <!-- Hero Section -->
    <section class="fixed inset-0 flex items-center justify-center pointer-events-none">
        <!-- Event horizon effect - dark sphere -->
        <div class="event-horizon">
            <div class="horizon-core"></div>
        </div>

        <!-- Drifting specks - move independently from stars -->
        <div class="specks">
            <div class="speck speck-1"></div>
            <div class="speck speck-2"></div>
            <div class="speck speck-3"></div>
            <div class="speck speck-4"></div>
            <div class="speck speck-5"></div>
            <div class="speck speck-6"></div>
        </div>

        <div class="container container-md pointer-events-auto relative z-10">
            <div class="text-center">
                <h1 class="heading-hero mb-4 hero-animate" style="--delay: 0">
                    <span class="text-gradient">Nick</span>
                    <span class="name-last">Russo</span>
                </h1>

                <p class="tagline hero-animate" style="--delay: 1">
                    Backend engineer building databases, AI agents, and developer tools
                </p>

                <div class="hero-animate mt-8" style="--delay: 2">
                    <SocialLinks />
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    /* Event horizon - layered effect for depth */
    .event-horizon {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 150vw;
        height: 150vw;
        pointer-events: none;
    }

    @media (min-width: 768px) {
        .event-horizon {
            width: min(95vw, 95vh);
            height: min(95vw, 95vh);
        }
    }

    /* Dark core - fuzzy edge event horizon */
    .horizon-core {
        position: absolute;
        inset: 10%;
        border-radius: 50%;
        background: radial-gradient(
            circle at center,
            #000000 0%,
            #000000 30%,
            transparent 70%
        );
        filter: blur(12px);
    }

    /* Drifting specks - subtle particles moving across screen */
    .specks {
        position: fixed;
        inset: 0;
        overflow: hidden;
        pointer-events: none;
        z-index: -1;
    }

    .speck {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.4);
    }

    .speck-1 {
        width: 2px;
        height: 2px;
        top: 20%;
        left: -2%;
        animation: drift-right 60s linear infinite;
    }

    .speck-2 {
        width: 3px;
        height: 3px;
        top: 45%;
        left: -3%;
        opacity: 0.6;
        animation: drift-right-down 50s linear infinite;
        animation-delay: -15s;
    }

    .speck-3 {
        width: 2px;
        height: 2px;
        top: 70%;
        right: -2%;
        opacity: 0.4;
        animation: drift-left 80s linear infinite;
        animation-delay: -30s;
    }

    .speck-4 {
        width: 2px;
        height: 2px;
        top: 35%;
        left: -2%;
        opacity: 0.5;
        animation: drift-right-up 70s linear infinite;
        animation-delay: -40s;
    }

    .speck-5 {
        width: 3px;
        height: 3px;
        top: 60%;
        left: -3%;
        opacity: 0.45;
        animation: drift-right 55s linear infinite;
        animation-delay: -25s;
    }

    .speck-6 {
        width: 2px;
        height: 2px;
        top: 85%;
        right: -2%;
        opacity: 0.35;
        animation: drift-left-up 90s linear infinite;
        animation-delay: -60s;
    }

    @keyframes drift-right {
        from { transform: translateX(0); }
        to { transform: translateX(110vw); }
    }

    @keyframes drift-right-down {
        from { transform: translate(0, 0); }
        to { transform: translate(110vw, 10vh); }
    }

    @keyframes drift-right-up {
        from { transform: translate(0, 0); }
        to { transform: translate(110vw, -10vh); }
    }

    @keyframes drift-left {
        from { transform: translateX(0); }
        to { transform: translateX(-110vw); }
    }

    @keyframes drift-left-up {
        from { transform: translate(0, 0); }
        to { transform: translate(-110vw, -15vh); }
    }

    /* Name styling */
    .name-last {
        color: var(--color-text-primary);
        margin-left: 0.1em;
    }

    /* Tagline styling */
    .tagline {
        font-size: var(--text-lg);
        color: var(--color-text-secondary);
    }

    @media (min-width: 640px) {
        .tagline {
            font-size: var(--text-xl);
        }
    }

    /* Entrance animations */
    @keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .hero-animate {
        animation: fadeUp 0.7s cubic-bezier(0.16, 1, 0.3, 1) backwards;
        animation-delay: calc(var(--delay) * 0.1s);
    }

    @media (prefers-reduced-motion: reduce) {
        .hero-animate,
        .speck {
            animation: none;
        }

        .hero-animate {
            opacity: 1;
        }

        .speck {
            display: none;
        }
    }
</style>
