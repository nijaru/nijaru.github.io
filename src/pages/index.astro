---
import Layout from "../layouts/Layout.astro";
import ReflectionText from "../components/ReflectionText";
import TextGlow from "../components/TextGlow";
import BlogPostPreview from "../components/BlogPostPreview";
import GithubRepos from "../components/GithubRepos";

// Get recent blog posts - simplified approach with proper typing
// Since we only have one blog post, we'll use a direct approach to avoid TypeScript errors
const recentPosts = [
    {
        url: "/blog/welcome-to-my-new-site",
        title: "Rebuilding My Personal Site with Solid.js and Astro",
        pubDate: new Date("2024-03-01"),
        formattedDate: "March 1, 2024",
        excerpt:
            "My experience rebuilding my personal website using Solid.js and Astro with a space theme.",
        tags: ["Solid.js", "Astro", "Web Dev"],
    },
];
---

<Layout title="Nick Russo - Software Developer">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="text-center mb-12">
            <h1 class="text-5xl md:text-6xl font-bold mb-4">
                <span class="text-accent-purple">
                    <TextGlow client:load enhanced={true}>
                        <ReflectionText client:load>Nick</ReflectionText>
                    </TextGlow>
                </span>
                <span class="text-white">
                    <TextGlow client:load enhanced={true}>
                        <ReflectionText client:load>Russo</ReflectionText>
                    </TextGlow>
                </span>
            </h1>

            <h2 class="text-2xl md:text-3xl font-semibold mb-8 tracking-wide">
                <TextGlow client:load>
                    <span class="text-lime-400">Software Developer</span>
                </TextGlow>
            </h2>
        </div>

        <!-- About Me Section -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold mb-6 border-b border-space-700 pb-2">
                <span class="text-lime-400">About Me</span>
            </h2>
            <div
                class="bg-space-800/60 backdrop-blur-sm p-6 rounded-lg border border-space-700 mb-4"
            >
                <p class="text-gray-300 mb-4">
                    I'm a software developer specializing in backend systems and
                    distributed applications. With experience in Python, Go, and various
                    cloud technologies, I build reliable and efficient solutions for
                    complex problems.
                </p>
                <p class="text-gray-300">
                    Currently exploring AI applications, database innovations, and
                    modern frontend frameworks like Solid.js and Astro. Starting a new
                    pre seed post failed startup every day in <span
                        class="text-lime-300 font-medium">Flounder modeâ„¢.</span
                    >
                </p>
            </div>
            <div class="mt-4 text-right">
                <a
                    href="/about"
                    class="text-accent-blue hover:text-accent-purple inline-flex items-center"
                >
                    Learn more about me
                    <svg
                        class="w-4 h-4 ml-1"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                </a>
            </div>
        </section>

        <!-- Recent Blog Post -->
        <section class="mb-12">
            <h2 class="text-2xl font-bold mb-6 border-b border-space-700 pb-2">
                <span class="text-lime-400">Recent Post</span>
            </h2>
            {recentPosts.map((post) => <BlogPostPreview post={post} />)}
            <div class="mt-4 text-right">
                <a
                    href="/blog"
                    class="text-accent-blue hover:text-accent-purple inline-flex items-center"
                >
                    View all posts
                    <svg
                        class="w-4 h-4 ml-1"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                </a>
            </div>
        </section>

        <!-- Featured GitHub Repos -->
        <section>
            <h2 class="text-2xl font-bold mb-6 border-b border-space-700 pb-2">
                <span class="text-lime-400">Featured Projects</span>
            </h2>
            <GithubRepos client:load username="nijaru" limit={2} />
            <div class="mt-4 text-right">
                <a
                    href="/projects"
                    class="text-accent-blue hover:text-accent-purple inline-flex items-center"
                >
                    View all projects
                    <svg
                        class="w-4 h-4 ml-1"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                </a>
            </div>
        </section>
    </div>
</Layout>
