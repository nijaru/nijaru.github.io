---
import Layout from "../layouts/Layout.astro";
import SocialLinks from "../components/SocialLinks.astro";
---

<Layout
    title="Nick Russo - Software Developer"
    description="Software developer building backend systems, distributed applications, and AI-powered tools."
    showFooter={false}
>
    <!-- Hero Section -->
    <section class="fixed inset-0 flex items-center justify-center pointer-events-none">
        <div class="container container-md pointer-events-auto">
            <div class="text-center">
                <h1 class="heading-1 mb-6 hero-animate" style="--delay: 0">
                    <span class="text-accent-blue">Nick</span> <span class="text-text-primary">Russo</span>
                </h1>
                <p class="body-large text-text-secondary mb-12 hero-animate" style="--delay: 1">
                    Software developer building AI, databases, and developer tools.
                </p>
                <div class="hero-animate" style="--delay: 2">
                    <SocialLinks />
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    @keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .hero-animate {
        animation: fadeUp 0.6s ease-out backwards;
        animation-delay: calc(var(--delay) * 0.1s);
    }

    @media (prefers-reduced-motion: reduce) {
        .hero-animate {
            animation: none;
            opacity: 1;
        }
    }
</style>
