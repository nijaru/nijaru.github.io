---
import Layout from "../layouts/Layout.astro";
import SocialLinks from "../components/SocialLinks.astro";
---

<Layout
    title="Nick Russo - Software Developer"
    description="Software developer building backend systems, distributed applications, and AI-powered tools."
    showFooter={false}
>
    <!-- Hero Section -->
    <section class="fixed inset-0 flex items-center justify-center pointer-events-none">
        <!-- Event horizon effect - dark sphere with subtle rim glow -->
        <div class="event-horizon">
            <div class="horizon-rim"></div>
            <div class="horizon-core"></div>
        </div>

        <!-- Drifting specks - move independently from stars -->
        <div class="specks">
            <div class="speck speck-1"></div>
            <div class="speck speck-2"></div>
            <div class="speck speck-3"></div>
        </div>

        <div class="container container-md pointer-events-auto relative z-10">
            <div class="text-center">
                <h1 class="heading-hero mb-6 hero-animate" style="--delay: 0">
                    <span class="name-first">Nick</span>
                    <span class="name-last">Russo</span>
                </h1>

                <p class="tagline hero-animate" style="--delay: 1">
                    Building AI, databases, and developer tools
                </p>

                <div class="hero-animate mt-10" style="--delay: 2">
                    <SocialLinks />
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    /* Event horizon - layered effect for depth */
    .event-horizon {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: min(50vw, 50vh);
        height: min(50vw, 50vh);
        pointer-events: none;
    }

    /* Outer rim glow - subtle light bending effect */
    .horizon-rim {
        position: absolute;
        inset: -15%;
        border-radius: 50%;
        background: radial-gradient(
            circle at center,
            transparent 45%,
            rgba(80, 60, 40, 0.03) 50%,
            rgba(120, 80, 50, 0.05) 55%,
            rgba(100, 70, 45, 0.03) 60%,
            transparent 70%
        );
    }

    /* Dark core - the actual event horizon */
    .horizon-core {
        position: absolute;
        inset: 20%;
        border-radius: 50%;
        background: radial-gradient(
            circle at center,
            #000000 0%,
            #000000 70%,
            rgba(0, 0, 0, 0.95) 85%,
            rgba(0, 0, 0, 0.8) 95%,
            transparent 100%
        );
        box-shadow:
            0 0 60px rgba(0, 0, 0, 0.5),
            0 0 100px rgba(0, 0, 0, 0.3);
    }

    /* Drifting specks - subtle particles moving across screen */
    .specks {
        position: fixed;
        inset: 0;
        overflow: hidden;
        pointer-events: none;
    }

    .speck {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.4);
    }

    .speck-1 {
        width: 2px;
        height: 2px;
        top: 25%;
        left: -2%;
        animation: drift-1 90s linear infinite;
    }

    .speck-2 {
        width: 3px;
        height: 3px;
        top: 55%;
        left: -3%;
        opacity: 0.5;
        animation: drift-2 70s linear infinite;
        animation-delay: -25s;
    }

    .speck-3 {
        width: 2px;
        height: 2px;
        top: 75%;
        right: -2%;
        opacity: 0.3;
        animation: drift-3 110s linear infinite;
        animation-delay: -50s;
    }

    @keyframes drift-1 {
        from { transform: translateX(0); }
        to { transform: translateX(110vw); }
    }

    @keyframes drift-2 {
        from { transform: translate(0, 0); }
        to { transform: translate(110vw, -15vh); }
    }

    @keyframes drift-3 {
        from { transform: translateX(0); }
        to { transform: translateX(-110vw); }
    }

    /* Name styling */
    .name-first {
        color: var(--color-accent-primary);
    }

    .name-last {
        color: var(--color-text-primary);
        margin-left: 0.1em;
    }

    /* Tagline styling */
    .tagline {
        font-size: var(--text-lg);
        color: var(--color-text-secondary);
    }

    @media (min-width: 640px) {
        .tagline {
            font-size: var(--text-xl);
        }
    }

    /* Entrance animations */
    @keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .hero-animate {
        animation: fadeUp 0.7s cubic-bezier(0.16, 1, 0.3, 1) backwards;
        animation-delay: calc(var(--delay) * 0.1s);
    }

    @media (prefers-reduced-motion: reduce) {
        .hero-animate,
        .speck {
            animation: none;
        }

        .hero-animate {
            opacity: 1;
        }

        .speck {
            display: none;
        }
    }
</style>
