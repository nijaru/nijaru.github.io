---
import Layout from "../layouts/Layout.astro";
import SocialLinks from "../components/SocialLinks.astro";
---

<Layout
    title="Nick Russo - Software Developer"
    description="Software developer building backend systems, distributed applications, and AI-powered tools."
    showFooter={false}
>
    <!-- Hero Section -->
    <section class="fixed inset-0 flex items-center justify-center pointer-events-none">
        <!-- Orbital system - large rings containing the content -->
        <div class="orbital-system">
            <!-- Outer orbit ring -->
            <div class="orbit-ring orbit-outer"></div>
            <!-- Inner orbit ring -->
            <div class="orbit-ring orbit-inner"></div>

            <!-- Orbiting moons -->
            <div class="moon moon-1">
                <div class="moon-body"></div>
            </div>
            <div class="moon moon-2">
                <div class="moon-body"></div>
            </div>
            <div class="moon moon-3">
                <div class="moon-body"></div>
            </div>
        </div>

        <!-- Black hole / void effect behind content -->
        <div class="void-effect"></div>

        <div class="container container-md pointer-events-auto relative z-10">
            <div class="text-center">
                <h1 class="heading-hero mb-6 hero-animate" style="--delay: 0">
                    <span class="name-first">Nick</span>
                    <span class="name-last">Russo</span>
                </h1>

                <p class="tagline hero-animate" style="--delay: 1">
                    Building AI, databases, and developer tools
                </p>

                <div class="hero-animate mt-10" style="--delay: 2">
                    <SocialLinks />
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    /* Orbital system - viewport-scale rings */
    .orbital-system {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: min(90vw, 90vh);
        height: min(90vw, 90vh);
        pointer-events: none;
    }

    .orbit-ring {
        position: absolute;
        border-radius: 50%;
        border: 1px solid rgba(255, 255, 255, 0.04);
    }

    .orbit-outer {
        inset: 0;
    }

    .orbit-inner {
        inset: 15%;
        border-color: rgba(255, 255, 255, 0.03);
    }

    /* Black hole / void effect */
    .void-effect {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: min(50vw, 50vh);
        height: min(50vw, 50vh);
        background: radial-gradient(
            circle at center,
            rgba(0, 0, 0, 0.4) 0%,
            rgba(0, 0, 0, 0.2) 30%,
            transparent 70%
        );
        pointer-events: none;
    }

    /* Moon containers - handle orbit animation */
    .moon {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
    }

    /* Moon bodies - the actual visible spheres */
    .moon-body {
        position: absolute;
        border-radius: 50%;
        background: linear-gradient(
            135deg,
            rgba(180, 180, 190, 0.5) 0%,
            rgba(100, 100, 110, 0.3) 50%,
            rgba(60, 60, 70, 0.2) 100%
        );
        box-shadow:
            inset -2px -2px 4px rgba(0, 0, 0, 0.3),
            inset 1px 1px 2px rgba(255, 255, 255, 0.1);
    }

    /* Moon 1 - large, slow orbit on outer ring */
    .moon-1 {
        animation: orbit 60s linear infinite;
    }
    .moon-1 .moon-body {
        width: 10px;
        height: 10px;
        transform: translate(-50%, -50%) translateX(calc(min(45vw, 45vh)));
    }

    /* Moon 2 - medium, medium speed on inner ring */
    .moon-2 {
        animation: orbit 40s linear infinite reverse;
    }
    .moon-2 .moon-body {
        width: 6px;
        height: 6px;
        transform: translate(-50%, -50%) translateX(calc(min(32vw, 32vh)));
        opacity: 0.7;
    }

    /* Moon 3 - small, faster orbit */
    .moon-3 {
        animation: orbit 25s linear infinite;
    }
    .moon-3 .moon-body {
        width: 4px;
        height: 4px;
        transform: translate(-50%, -50%) translateX(calc(min(38vw, 38vh)));
        opacity: 0.5;
    }

    @keyframes orbit {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    /* Name styling - simple cyan/white */
    .name-first {
        color: var(--color-accent-primary);
    }

    .name-last {
        color: var(--color-text-primary);
        margin-left: 0.1em;
    }

    /* Tagline styling */
    .tagline {
        font-size: var(--text-lg);
        color: var(--color-text-secondary);
    }

    @media (min-width: 640px) {
        .tagline {
            font-size: var(--text-xl);
        }
    }

    /* Entrance animations */
    @keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .hero-animate {
        animation: fadeUp 0.7s cubic-bezier(0.16, 1, 0.3, 1) backwards;
        animation-delay: calc(var(--delay) * 0.1s);
    }

    @media (prefers-reduced-motion: reduce) {
        .hero-animate,
        .moon {
            animation: none;
        }

        .hero-animate {
            opacity: 1;
        }
    }
</style>
