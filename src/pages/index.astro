---
import Layout from "../layouts/Layout.astro";
import SocialLinks from "../components/SocialLinks.astro";
---

<Layout
    title="Nick Russo - Software Developer"
    description="Software developer building backend systems, distributed applications, and AI-powered tools."
    showFooter={false}
>
    <!-- Hero Section -->
    <section class="fixed inset-0 flex items-center justify-center pointer-events-none">
        <div class="container container-md pointer-events-auto relative z-10">
            <div class="text-center">
                <h1 class="heading-hero mb-4 hero-animate text-gradient" style="--delay: 0">
                    Nick Russo
                </h1>

                <p class="tagline hero-animate" style="--delay: 1">
                    Backend engineer building agents, databases, and developer tools
                </p>

                <div class="hero-animate mt-8" style="--delay: 2">
                    <SocialLinks />
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    /* Tagline styling */
    .tagline {
        font-size: var(--text-lg);
        color: var(--color-text-secondary);
    }

    @media (min-width: 640px) {
        .tagline {
            font-size: var(--text-xl);
        }
    }

    /* Entrance animations */
    @keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .hero-animate {
        animation: fadeUp 0.7s cubic-bezier(0.16, 1, 0.3, 1) backwards;
        animation-delay: calc(var(--delay) * 0.1s);
    }

    @media (prefers-reduced-motion: reduce) {
        .hero-animate {
            animation: none;
            opacity: 1;
        }
    }
</style>
