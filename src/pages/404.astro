---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 Not Found" description="Page not found. The page you're looking for doesn't exist.">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 text-center min-h-[60vh] flex flex-col items-center justify-center">
    <h1 class="text-6xl font-bold mb-6">
      <span class="text-blue-500">4</span>
      <span class="text-accent-blue">0</span>
      <span class="text-blue-500">4</span>
    </h1>
    
    <p class="text-2xl text-text-secondary mb-8">Oops! You've ventured into deep space.</p>

    <div class="relative w-48 h-48 mb-8">
      <div class="absolute inset-0 rounded-full animate-pulse" style="background-color: var(--color-surface-elevated);"></div>
      <div class="absolute inset-4 rounded-full" style="background-color: var(--color-surface);"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-8 h-8 bg-blue-500 rounded-full animate-ping opacity-75"></div>
    </div>

    <p class="text-text-tertiary mb-6">The page you're looking for has drifted away or never existed.</p>
    
    <a 
      href="/" 
      class="px-6 py-3 bg-blue-500 hover:bg-blue-400 text-white font-bold rounded-full transition-all duration-300"
    >
      Return to Home
    </a>
  </div>
</Layout>