---
import Layout from '../../layouts/Layout.astro';
import ReflectionText from '../../components/ReflectionText';
---

<Layout title="Blog - Nick Russo">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-4xl font-bold mb-2 text-center">
      <span class="text-accent-purple">
        <ReflectionText client:load>My</ReflectionText>
      </span>
      <span class="text-white">
        <ReflectionText client:load>Blog</ReflectionText>
      </span>
    </h1>
    
    <p class="text-center text-gray-400 mb-12">Thoughts on software development, programming languages, and more</p>
    
    <div class="space-y-12">
      <article class="bg-space-800/60 backdrop-blur-sm p-6 rounded-lg border border-space-700 hover:border-lime-500 transition-all duration-300">
        <a href="/blog/welcome-to-my-new-site">
          <h2 class="text-2xl font-semibold text-lime-400 mb-2">Welcome to My New Site!</h2>
          <time datetime="2025-03-01" class="text-sm text-gray-400 mb-4 block">March 1, 2025</time>
          <p class="text-gray-300 mb-4">
            I'm excited to unveil my new website built with Solid.js and Astro. This space-themed site represents my latest exploration into modern web development.
          </p>
          <div class="flex gap-2">
            <span class="px-2 py-1 bg-space-700 rounded text-xs text-accent-blue">Solid.js</span>
            <span class="px-2 py-1 bg-space-700 rounded text-xs text-accent-purple">Astro</span>
            <span class="px-2 py-1 bg-space-700 rounded text-xs text-lime-400">Web Dev</span>
          </div>
        </a>
      </article>
      
      <!-- More blog posts can be added here -->
    </div>
  </div>
</Layout>