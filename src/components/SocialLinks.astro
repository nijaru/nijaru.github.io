---
import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import XIcon from "./icons/XIcon.astro";

const socialLinks = [
  { name: 'GitHub', url: 'https://github.com/nijaru', icon: 'github' },
  { name: 'LinkedIn', url: 'https://www.linkedin.com/in/nick-russo', icon: 'linkedin' },
  { name: 'Twitter', url: 'https://twitter.com/nijaru0x', icon: 'twitter' }
];
---

<div class="flex justify-center gap-4">
  {socialLinks.map(link => (
    <div class="social-link-wrapper">
      <a
        href={link.url}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
        aria-label={`Visit ${link.name} profile`}
      >
        {link.icon === 'github' && <GitHubIcon class="w-5 h-5" />}
        {link.icon === 'linkedin' && <LinkedInIcon class="w-5 h-5" />}
        {link.icon === 'twitter' && <XIcon class="w-5 h-5" />}
      </a>
      <span class="social-tooltip">{link.name}</span>
    </div>
  ))}
</div>

<style>
  .social-link-wrapper {
    position: relative;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.75rem;
    height: 2.75rem;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    color: var(--color-text-secondary);
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .social-link:hover {
    color: var(--color-text-primary);
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.12);
    transform: translateY(-2px);
  }

  .social-tooltip {
    position: absolute;
    top: -2rem;
    left: 50%;
    transform: translateX(-50%) translateY(4px);
    padding: 0.25rem 0.5rem;
    background: var(--color-surface-elevated);
    color: var(--color-text-primary);
    font-size: 0.7rem;
    border-radius: 0.25rem;
    border: 1px solid var(--color-border-subtle);
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: all 0.2s ease;
  }

  .social-link:hover + .social-tooltip,
  .social-link:focus + .social-tooltip {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }

  @media (prefers-reduced-motion: reduce) {
    .social-link,
    .social-tooltip {
      transition: none;
    }
  }
</style>