---
// SectionHeading component - Styled section heading
interface Props {
  level?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
  class?: string;
}

const { level = 'h2', class: className } = Astro.props;
const Element = level;
---

<Element class:list={["heading-2", className]}>
  <slot />
</Element>