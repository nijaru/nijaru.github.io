---
// BlogPostPreview component - Simple blog post preview
interface Props {
  title?: string;
  excerpt?: string;
  date?: string;
  href?: string;
  class?: string;
}

const { title, excerpt, date, href, class: className } = Astro.props;
---

{href ? (
  <a href={href} class:list={["group block p-4 -mx-4 sm:p-6 sm:-mx-6 rounded-2xl hover:bg-white/5 transition-all duration-300", className]}>
    <div class="flex flex-col gap-2">
      {title && <h3 class="text-xl font-semibold text-text-primary group-hover:text-accent-primary transition-colors">{title}</h3>}
      {date && <p class="text-sm font-mono text-text-tertiary">{date}</p>}
      {excerpt && <p class="text-base text-text-secondary leading-relaxed">{excerpt}</p>}
      <slot />
    </div>
  </a>
) : (
  <div class:list={[className]}>
    {title && <h3 class="heading-3">{title}</h3>}
    {date && <p class="body-small text-text-tertiary">{date}</p>}
    {excerpt && <p class="body-normal text-text-secondary">{excerpt}</p>}
    <slot />
  </div>
)}