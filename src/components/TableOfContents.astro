---
// TableOfContents component - Simple TOC
interface Props {
  headings?: Array<{ text: string; slug: string; level: number }>;
  class?: string;
}

const { headings = [], class: className } = Astro.props;
---

{headings.length > 0 && (
  <nav class:list={["toc", className]}>
    <h4 class="body-small text-text-tertiary mb-4">Table of Contents</h4>
    <ul class="space-y-2">
      {headings.map(heading => (
        <li class:list={[`toc-level-${heading.level}`]}>
          <a href={`#${heading.slug}`} class="body-small text-text-secondary hover:text-accent-primary">
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}

<style>
  .toc-level-1 { margin-left: 0; }
  .toc-level-2 { margin-left: 1rem; }
  .toc-level-3 { margin-left: 2rem; }
  .toc-level-4 { margin-left: 3rem; }
  .toc-level-5 { margin-left: 4rem; }
  .toc-level-6 { margin-left: 5rem; }
</style>